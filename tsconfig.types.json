{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "allowImportingTsExtensions": false,
    "sourceRoot": "./src/",
    "inlineSourceMap": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "./dist/",
    "./lib/",
    "**/*.spec.ts",
    "**/tests/**",
    "**/__templates__/**"
  ]
}
